@model FifteenGame.Web.Models.GameViewModel

@{
    ViewBag.Title = "Крестики-нолики";
    bool isGameOver = (bool?)ViewBag.IsGameOver ?? false;
}

<main>
    <h2>Крестики-нолики </h2>

    @if (isGameOver)
    {
        <h2 class="text-danger">Поздравляем! Игра завершена.</h2>
        <div>@Html.ActionLink("Начать заново", "Index", "Game", new { }, new { @class = "btn btn-primary fs-3", })</div>
    }

    <div class="container text-center">
        @for (int row = 0; row < Model.RowCount; row++)
        {
            <div class="row">
                <div class="col col-2">
                </div>

                @for (int column = 0; column < Model.ColumnCount; column++)
                {


                    if (isGameOver)
                    {
                        <div class="col col-2 d-grid gap-4 p-2">
                            <div class="btn btn-secondary fs-3">@Model.Cells[row, column].Text</div>


                        </div>

                        continue;
                    }
                    else if (!string.IsNullOrEmpty(@Model.Cells[row, column].Text))
                    {
                        <div class="col col-2 d-grid gap-4 p-2">
                            <div class="btn btn-info fs-3">@Model.Cells[row, column].Text</div>


                        </div>

                        continue;
                    }

                    else
                    {
                        <div class="col-2 d-grid gap-4 p-2">
                            @Html.ActionLink(" ", "PressButton",
                                new { colum = column, row = row },
                                new { @class = "btn btn-warning fs-3" })
                        </div>
                    }
                }
            </div>
        }
    </div>
</main>
